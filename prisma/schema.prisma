// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  password    String
  phone       String
  dateOfBirth String
  gender      String    @default("Non-Binary")
}

model Therapist {
  id                      String    @id @default(uuid())
  name                    String
  email                   String    @unique
  password                String
  phone                   String
  bio                     String
  address                 String
  institutionName         String?
  languages               Json
  specialties             Json
  canWriteMedication      Boolean
  website                 String?
  latitude                Int?
  longitude               Int?
  acceptsPrivateInsurance Boolean?
}
